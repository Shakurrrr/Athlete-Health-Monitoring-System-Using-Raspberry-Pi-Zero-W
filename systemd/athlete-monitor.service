[Unit]
Description=Athlete Monitor (sensors â†’ MQTT)
After=network-online.target mosquitto.service
Wants=network-online.target

[Service]
User=pi
Group=pi
WorkingDirectory=/home/pi/athlete-monitor-pi/src
Environment=PYTHONUNBUFFERED=1
Environment=TZ=Africa/Lagos
ExecStart=/home/pi/athlete-monitor-pi/.venv/bin/python3 /home/pi/athlete-monitor-pi/src/athlete_monitor.py
Restart=on-failure
RestartSec=3

[Install]
WantedBy=multi-user.target
